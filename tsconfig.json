{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "lib": ["esnext", "DOM"],
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@/*": ["src/*"],
      "@lobehub/chat-plugin-realtime-weather": ["src"]
    }
  },
  "include": ["docs", "api", ".dumi/**/*", ".dumirc.ts"]
}
